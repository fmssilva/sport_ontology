#!/bin/bash
# Cross-platform test runner
# Automatically detects OS and runs appropriate script

echo "ğŸ” Detecting operating system..."

case "$(uname -s)" in
    CYGWIN*|MINGW32*|MINGW64*|MSYS*)
        echo "ğŸ“ Windows detected - using batch file"
        if [ -f "run-tests.bat" ]; then
            cmd //c "run-tests.bat"
        else
            echo "âŒ ERROR: run-tests.bat not found!"
            exit 1
        fi
        ;;
    Darwin*)
        echo "ğŸ macOS detected - using shell script"
        if [ -f "run-tests.sh" ]; then
            chmod +x run-tests.sh
            ./run-tests.sh
        else
            echo "âŒ ERROR: run-tests.sh not found!"
            exit 1
        fi
        ;;
    Linux*)
        echo "ğŸ§ Linux detected - using shell script"
        if [ -f "run-tests.sh" ]; then
            chmod +x run-tests.sh
            ./run-tests.sh
        else
            echo "âŒ ERROR: run-tests.sh not found!"
            exit 1
        fi
        ;;
    *)
        echo "â“ Unknown OS: $(uname -s)"
        echo "Please run the appropriate script manually:"
        echo "  Windows: run-tests.bat"
        echo "  Linux/Mac: run-tests.sh"
        exit 1
        ;;
esac